---
const { title, description, image } = Astro.props;
---

<div class="card">
    <img src={image} alt="" />
    <h6>{title}</h6>
    <p>{description}</p>
</div>

<style>
    .card {
        @apply grid border border-teal-400 px-4 py-3 rounded-md items-center;
        grid-template-columns: 102px auto;
        grid-template-rows: 0.5fr 1.5fr;
    }
    img {
        grid-row: 1/3;
    }
    .card > h6 {
        @apply text-teal-400 text-2xl font-medium;
    }
    .card > p {
        @apply text-teal-100 text-lg font-light;
    }
    @media screen and (max-width: 620px) {
        .card {
            @apply px-2 py-1;
            grid-template-columns: 36px auto;
            gap: 2px 12px;
        }
        .card > h6 {
            @apply text-xl;
        }
        .card > p {
            @apply text-sm;
        }
    }
</style>
